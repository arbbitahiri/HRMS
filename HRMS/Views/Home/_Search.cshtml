
<div class="card">
    <div class="card-body rounded rounded-lg d-flex bg-info">
        <div class="d-flex flex-column flex-lg-row-auto flex-grow-1 w-auto w-lg-350px w-xl-450px w-xxl-650px py-4 py-md-4 px-10 px-md-20 pr-lg-0" style="padding-bottom: 0px !important; padding-top: 0px !important;">
            <div class="align-self-center max-w-800px mt-6 w-100">
                <div class="position-relative">
                    <h2 class="text-center display-4">@Resource.RiinvestCollege</h2>
                    <div class="row">
                        <div class="col-md-8 offset-md-3 mt-4">
                            <form asp-action="Search" asp-controller="Home" id="frm_search_home" class="noLoading" method="post"
                                data-ajax="true" data-ajax-begin="begin_searching" data-ajax-complete="complete_searching" data-ajax-update="#kt_search_result">
                                @Html.AntiForgeryToken()

                                <div class="input-group input-group-lg shadow">
                                    <input id="param" name="param" type="search" placeholder="@Resource.SearchHome" autocomplete="off" class="form-control form-control-lg"/>
                                    <div class="input-group-append"><button type="submit" class="btn btn-lg btn-default"><i class="fa fa-search"></i></button></div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div id="kt_search_result"></div>
                </div>
            </div>
            <span class="d-block pt-3 offset-md-3">
                <a asp-action="Index" asp-controller="Staff" class="mt-3 text-light">
                    <i class="fab fa-searchengin"></i>
                    @Resource.AdvancedSearch
                </a>
            </span>
        </div>
        <div class="d-md-flex flex-row-fluid bgi-no-repeat bgi-position-y-center bgi-position-x-left bgi-size-cover" style="background-image: url('/images/features.svg')"></div>
    </div>
</div>

<script>
    function begin_searching() {
        $('#kt_spinner').addClass('spinner');
    }

    function complete_searching() {
        $('#kt_spinner').removeClass('spinner');
    }
</script>

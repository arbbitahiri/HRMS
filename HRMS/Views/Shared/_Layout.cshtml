@inject IConfiguration conf
@{
    UserModel user = (UserModel)ViewData["User"];
    ErrorVM error = (ErrorVM)ViewData["Error"] ?? new ErrorVM();
    var controller = this.ViewContext.RouteData.Values["controller"] ?? "";
    var action = this.ViewContext.RouteData.Values["action"] ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMS</title>

    <link rel="shortcut icon" href="~/favicon.ico" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.3.0/css/flag-icon.min.css">

    <link rel="stylesheet" href="~/assets/plugins/fontawesome-free/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/jqvmap/jqvmap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/pace-progress/themes/blue/pace-theme-minimal.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/daterangepicker/daterangepicker.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/summernote/summernote-bs4.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/select2/css/select2.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/bootstrap-switch/css/bootstrap-switch.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/plugins/sweetalert2/sweetalert2.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/dist/css/adminlte.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true">
</head>
<body class="hold-transition sidebar-mini layout-navbar-fixed" style="height: auto;">
    <div class="pace pace-inactive">
        <div class="pace-progress" data-progress-text="100%" data-progress="99" style="transform: translate3d(100%, 0px, 0px);">
            <div class="pace-progress-inner"></div>
        </div>
        <div class="pace-activity"></div>
    </div>

    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Home/Index" class="nav-link">HRMS Riinvest</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <partial name="_LanguagePartial" model="user.Language" />

                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/Home/Index" class="brand-link">
                <img src="~/favicon.ico" alt="Riinvest logo" class="brand-image" style="opacity: .8"/>
                <span class="brand-text font-weight-light">HRMS Riinvest</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    @await Component.InvokeAsync("Menu")
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h4 class="m-0">@ViewData["Title"]</h4>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2021 <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>.</strong>
            Arb & Korab - All rights reserved.
        </footer>
    </div>

    <aside class="control-sidebar control-sidebar-light">
        <!-- Control sidebar content goes here -->
    </aside>

    <div id="sidebar-overlay"></div>

    <partial name="_ModalPartial" model="user" />
    <partial name="_LoadingPartial" />

    <script src="~/js/site.js" asp-append-version="true"></script>
    @*<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>*@
    <script src="~/assets/plugins/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/datatables-responsive/js/dataTables.responsive.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/datatables-responsive/js/responsive.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/datatables-buttons/js/dataTables.buttons.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/pace-progress/pace.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/jquery-ui/jquery-ui.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/chart.js/Chart.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/sparklines/sparkline.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/jqvmap/jquery.vmap.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/jqvmap/maps/jquery.vmap.usa.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/jquery-knob/jquery.knob.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/moment/moment.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/daterangepicker/daterangepicker.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/summernote/summernote-bs4.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/select2/js/select2.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/bootstrap-switch/js/bootstrap-switch.min.js" asp-append-version="true"></script>
    <script src="~/assets/dist/js/adminlte.js" asp-append-version="true"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script>
        var culture = '@System.Globalization.CultureInfo.CurrentCulture.Name';
        //$(document).idleTimer(@conf["AppSettings:Timeout"]);
        $(document).on("idle.idleTimer", function (event, elem, obj) {
            window.location.href = '/Identity/Account/Timeout?returnUrl=' + window.location.pathname;
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

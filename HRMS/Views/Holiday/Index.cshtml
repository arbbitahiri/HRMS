            <li class="nav-item"><a class="nav-link" role="tab" data-toggle="pill" onclick="approved_tab()" id="tab_approved" href="#kt_approved" data-toggle="tab">@Resource.Approved</a></li>
            <li class="nav-item"><a class="nav-link" role="tab" data-toggle="pill" onclick="rejected_tab()" id="tab_rejected" href="#kt_rejected" data-toggle="tab">@Resource.Rejected</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane" id="kt_pending">
                <div class="row mb-3">
                    <div class="col-md-8">
                        <h5 class="font-weight-bolder">@Resource.ListOfSubjects</h5>
                    </div>
                </div>

                <table id="tbl_holidays_pending" class="table table-striped w-100 table-hover table-bordered">
                    <thead>
                        <th>#</th>
                        <th>@Resource.Name</th>
                        <th>@Resource.HolidayType</th>
                        <th>@Resource.StartDate</th>
                        <th>@Resource.EndDate</th>
                        <th>@Resource.RequestedDate</th>
                        <th data-orderable="false">@Resource.Actions</th>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="tab-pane" id="kt_approved">

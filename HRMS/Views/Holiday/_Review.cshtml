@using HRMS.Models.Holiday
@model Review
@inject IDDLRepo repo
@{
    UserModel user = (UserModel)ViewData["User"];
}

<div class="modal-header">
    <h5 class="modal-title">@Resource.Review - @Model.StaffName</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="far fa-times-circle"></i>
    </button>
</div>

<form asp-action="Review" asp-controller="Holiday" id="frm_review_holiday" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="success_review" role="form">
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <input asp-for="HolidayRequestIde" type="hidden"/>

        <div class="row form-group">
            <div class="col-md-6">
                <label asp-for="HolidayType">@Resource.HolidayType</label>
                <input asp-for="HolidayType" type="text" disabled class="form-control"/>
                <span asp-validation-for="HolidayType" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="StatusTypeId" class="required"></label>
                <select asp-for="StatusTypeId" asp-items="await repo.StatusTypes(user.Language)" type="text" class="form-control select2">
                    <option value="">@Resource.Choose</option>
                </select>
                <span asp-validation-for="StatusTypeId" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label asp-for="Description" class="required"></label>
                <textarea asp-for="Description" rows="2" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-bold btn-pure btn-default" data-dismiss="modal">@Resource.Close</button>
        <button type="submit" class="btn btn-bold btn-pure btn-primary float-right">@Resource.Review</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        var form = $('#frm_review_holiday');
        form.removeData('validator');
        form.removeData('unobtrusiveValidation');
        $.validator.unobtrusive.parse(form);

        if (culture == 'sq-AL') {
            $('textarea').prop('spellcheck', false);
        } else {
            $('textarea').prop('spellcheck', true);
        }

        $(".select2").select2({
            width: "100%",
            language: {
                noResults: function () {
                    return '@Html.Raw(Resource.NoResultsFound)';
                },
            }
        });

        $(".datetimepicker-input").datetimepicker({
            format: 'DD/MM/YYYY'
        });
    });

    function remaining_days() {
        $.get('@Url.Action("RemainingDays", "Holiday")', {
            htypeId: $('#AHolidayTypeId').val(),
            userId: '@user.Id'
        }, function (data) {
            $('#days').val(data);
        });
    }

    function success_review(data) {
        handle_success(data, SubmitPathType.RELOAD, "");
    }
</script>

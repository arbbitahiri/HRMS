@using HRMS.Models.Staff.Qualification
@model AddQualification
@inject IDDLRepo repo
@{
    UserModel user = (UserModel)ViewData["User"];
}

<style>
    .bootstrap-switch, .bootstrap-switch-handle-off, .bootstrap-switch-handle-on {
        width: 190px;
        height: 36px;
    }

    .bootstrap-switch-label {
        width: 95px !important;
    }
</style>

<div class="modal-header">
    <h5 class="modal-title">@Resource.Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="far fa-times-circle"></i>
    </button>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-md-3 form-group">
            <label asp-for="ProfessionTypeId"></label>
            <select asp-for="ProfessionTypeId" asp-items="await repo.ProfessionTypes(user.Language)" class="form-control select2 diss">
                <option value="">@Resource.Choose</option>
            </select>
            <span asp-validation-for="ProfessionTypeId" class="text-danger"></span>
        </div>
        <div class="col-md-3 form-group">
            <label asp-for="EducationLevelTypeId"></label>
            <select asp-for="EducationLevelTypeId" asp-items="await repo.EducationLevelTypes(user.Language)" class="form-control select2 diss">
                <option value="">@Resource.Choose</option>
            </select>
            <span asp-validation-for="EducationLevelTypeId" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text" class="form-control diss"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="Training"></label>
            <input asp-for="Training" type="text" class="form-control diss" value='@(Model.Training ? Resource.Yes : Resource.No)'/>
            <span asp-validation-for="Training" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="FieldOfStudy"></label>
            <input asp-for="FieldOfStudy" type="text" class="form-control diss"/>
            <span asp-validation-for="FieldOfStudy" class="text-danger"></span>
        </div>
        <div class="col-md-3 form-group">
            <label asp-for="From"></label>
            <input asp-for="From" type="text" autocomplete="off" class="form-control datetimepicker-input diss" data-toggle="datetimepicker" data-target="#From"/>
            <span asp-validation-for="From" class="text-danger"></span>
        </div>
        <div class="col-md-3 form-group">
            <label asp-for="To"></label>
            <input asp-for="To" type="text" disabled='@(Model.OnGoing ? "disabled" : "")' autocomplete="off" class="form-control datetimepicker-input diss" data-toggle="datetimepicker" data-target="#To"/>
            <span asp-validation-for="To" class="text-danger"></span>
        </div>
        <div class="col-md-2 form-group">
            <label asp-for="OnGoing"></label>
            <input asp-for="OnGoing" type="text" class="form-control diss" value='@(Model.OnGoing ? Resource.Yes : Resource.No)'/>
            <span asp-validation-for="OnGoing" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="City"></label>
            <input asp-for="City" type="text" class="form-control diss"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Country"></label>
            <input asp-for="Country" type="text" class="form-control diss"/>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" type="text" class="form-control diss"/>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Thesis"></label>
            <input asp-for="Thesis" type="text" class="form-control diss"/>
            <span asp-validation-for="Thesis" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="CreditType"></label>
            <input asp-for="CreditType" type="text" class="form-control diss"/>
            <span asp-validation-for="CreditType" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="CreditNumber"></label>
            <input asp-for="CreditNumber" type="text" class="form-control diss" value='@(Model.CreditNumber != null ? Model.CreditNumber.ToString() : "///")'/>
            <span asp-validation-for="CreditNumber" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="FinalGrade"></label>
            <input asp-for="FinalGrade" type="text" class="form-control diss" value='@(Model.FinalGrade != null ? Model.FinalGrade.ToString() : "///")'/>
            <span asp-validation-for="FinalGrade" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <label asp-for="Validity"></label>
            <input asp-for="Validity" type="text" readonly autocomplete="off" class="form-control datetimepicker-input diss" data-toggle="datetimepicker" data-target="#Validity"/>
            <span asp-validation-for="Validity" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-12">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" type="text" rows="2" class="form-control diss"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="modal-footer justify-content-between">
    <button type="button" class="btn btn-bold btn-pure btn-default" data-dismiss="modal">@Resource.Close</button>
    <button type="submit" class="btn btn-bold btn-pure btn-primary float-right">@Resource.Add</button>
</div>

<script>
    $('.diss').prop('disabled', true);
</script>